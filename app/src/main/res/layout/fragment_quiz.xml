<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.QuizFragment">

    <ImageButton
        android:id="@+id/closeQuizButton"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_back"
        android:backgroundTint="@color/orange_soft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:contentDescription="выйти из теста"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvSubjectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Урок жизни"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/orange_extra"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvQuizTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="Вопрос"
        android:textColor="@color/green_contrast"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closeQuizButton" />

    <TextView
        android:id="@+id/quizQuestionsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="16dp"
        android:text="10"
        android:textColor="@color/green_contrast"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvQuizTitle"
        app:layout_constraintTop_toBottomOf="@id/closeQuizButton" />

    <ProgressBar
        android:id="@+id/quizProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:progressTint="@color/orange_soft"
        android:progress="50"
        android:max="100"
        app:layout_constraintStart_toEndOf="@id/quizQuestionsCount"
        app:layout_constraintTop_toBottomOf="@id/closeQuizButton" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/quizQuestionsCount">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvQuizQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Какую оценку поставить Морозовой Александре за проделанную работу?"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="@color/green_dark"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/buttonGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                app:layout_constraintTop_toBottomOf="@+id/tvQuizQuestion"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/Answer1Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_selector_quiz_answers"
                    app:strokeColor="@color/stroke_selector_quiz_answers"
                    android:text="пятерку"
                    android:textColor="@color/green_dark"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/Answer2Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_selector_quiz_answers"
                    app:strokeColor="@color/stroke_selector_quiz_answers"
                    android:textColor="@color/green_dark"
                    app:strokeWidth="2dp"
                    android:layout_margin="15dp"
                    android:text="пятерку"/>

                <Button
                    android:id="@+id/Answer3Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_selector_quiz_answers"
                    app:strokeColor="@color/stroke_selector_quiz_answers"
                    android:textColor="@color/green_dark"
                    app:strokeWidth="2dp"
                    android:layout_margin="15dp"
                    android:text="пятерку"/>

                <Button
                    android:id="@+id/Answer4Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_selector_quiz_answers"
                    app:strokeColor="@color/stroke_selector_quiz_answers"
                    android:textColor="@color/green_dark"
                    app:strokeWidth="2dp"
                    android:layout_margin="15dp"
                    android:text="пятерку"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <TextView
                android:id="@+id/tvExplanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/buttonGroup"
                android:layout_margin="15dp"
                android:background="@android:drawable/editbox_background"
                android:backgroundTint="@color/grey_for_background"
                android:text="Почему бы и нет?"
                />

            <Button
                android:id="@+id/nextQuestionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvExplanation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="следующий вопрос"
                android:layout_marginTop="15dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>